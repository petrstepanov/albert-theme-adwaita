 * The Style Sheet Syntax (http://doc.qt.io/qt-5/stylesheet-syntax.html)
 * Qt Style Sheets Reference (http://doc.qt.io/qt-5/stylesheet-reference.html)
 */
* {
  border: 0px;
  color: #EEEEEC;
}

#frame {
  border-radius: 8px;
  background-color: #2D2D2D;
  min-width: 640px;
  max-width: 640px;
}

#frameTop {
  background-color: green;
}

#inputLine {
  padding: 2px;
  border-radius: 8px;
  font-size: 32px;
  height: 60px;
  selection-color: #EEEEEC;
  selection-background-color: #15539E;
  color: #EEEEEC;
  background-color: transparent;
}

#settingsButton {
  color: #EEEEEC;
  background-color: #353535;
  padding: 6px;
  margin: 6px 6px 0px 0px;
  min-width:14px;
  min-height:14px;
  max-width:14px;
  max-height:14px;
}


/********** ListViews **********/

QListView {
  margin-top: 0px;
  selection-color: #EEEEEC;
}

/********** scrollBar **********/
QListView QScrollBar:vertical  {
  width: 6px;
  background: transparent;
}

QListView QScrollBar::handle:vertical  {
  background: #7A7A79;
  min-height: 24px;
}

QListView QScrollBar::add-line:vertical, QScrollBar::sub-line:vertical,
QListView QScrollBar::up-arrow:vertical, QScrollBar::down-arrow:vertical,
QListView QScrollBar::add-page:vertical, QScrollBar::sub-page:vertical {
  border: 0px;
  width: 0px;
  height: 0px;
  background: transparent;
}

/********** actionList **********/
QListView#actionList {
  font-size: 18px;
}

QListView#actionList::item{
  height: 44px;

}

QListView#actionList::item::selected{
  background: #15539E;
}

/********** resultsList **********/
QListView#resultsList {
  border-top: 1px solid #333333;
  icon-size: 48px;
  font-size: 18px;
}

QListView#resultsList::item {
  height: 64px;
  background: #353535;
  color: #EEEEEC;
}

QListView#resultsList::item::selected {
  background: #15539E;
}

#subTextId {
padding: 10px;
}
